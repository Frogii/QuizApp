<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>

    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="BottomNavTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/nav_item_checked</item>
        <item name="colorOnSurface">@color/nav_item_unchecked</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">@color/button_background</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="TextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="CardTheme" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/surface_color</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>